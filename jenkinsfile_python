pipeline {
environment{
    registry = "rinkita/docker"
    registryCredential = 'dockerhub'
    dockerImage = ''
    containerId = sh(script: 'docker ps -aqf "name=node-app"', returnStdout:true)
  }
  
agent none 
    stages {
        stage('Cloning Git') {
        steps {
        git 'https://github.com/Rinkita/simple-python-pyinstaller-app.git'
         }
        }
        stage('Build') { 
            agent {
                docker {
                    image 'python:2-alpine' 
                }
            }
            steps {
                sh 'python -m py_compile sources/add2vals.py sources/calc.py' 
            }
        }
    }
}
